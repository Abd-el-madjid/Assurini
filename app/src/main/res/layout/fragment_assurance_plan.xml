<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Assurance.AssurancePlanFragment"
    android:background="@drawable/gradient_background"

    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="@color/transparent"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/transparent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:id="@+id/linear_layout_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >



                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="45dp"
                        android:layout_height="35dp"

                        android:layout_centerInParent="true"

                        android:src="@drawable/arrow" />



                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/discutionname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/profile"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgreay" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <RelativeLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/detail_text"
        android:layout_below="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_centerHorizontal="true"
            app:cardCornerRadius="15dp"
            android:paddingRight="5dp"
            android:paddingLeft="5dp"
            app:cardBackgroundColor="@color/whiteColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:id="@+id/image_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/company1"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="120dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:src="@drawable/stars" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/colorPrimaryLight"
                        android:id="@+id/company_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="multi star Person Health"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryLight"

                        android:layout_marginStart="10dp"
                        android:id="@+id/company_anssurance_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="coverage"

                        />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"

                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/evaluation"
                        android:text="25"
                        android:textSize="40dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/lightMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GB/MO"
                        android:textAlignment="center"
                        android:textColor="@color/lightMain"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>





            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    <RelativeLayout

        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:id="@+id/car_text"
        android:layout_below="@+id/detail_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView

            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            app:cardCornerRadius="15dp"
            app:cardUseCompatPadding="true"
            app:cardBackgroundColor="@color/whiteColor"
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <RelativeLayout
                android:id="@+id/question_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/car_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/imageView"
                    android:layout_toLeftOf="@id/imageViewuninsured"

                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textAlignment="textStart"
                    android:text="CAR"
                    android:textColor="@color/blackTextColor"
                    android:textSize="18dp"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/car_model"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/car_type"
                    android:layout_toRightOf="@id/imageView"
                    android:layout_toLeftOf="@id/imageViewuninsured"

                    android:text="Insurance"
                    android:textColor="@color/blackTextColor"
                    android:textSize="16dp" />

                <ImageView

                    android:id="@+id/imageView"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentLeft="true"
                    android:padding="16sp"
                    android:src="@drawable/sport_car" />
                <ImageView
                    android:id="@+id/imageViewuninsured"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_alignParentRight="true"
                    android:padding="16sp"
                    android:src="@drawable/silhouette_12757416" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <ScrollView
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_above="@id/layout_button_req"
        android:id="@+id/scroll_detaille"
        android:layout_below="@id/car_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="5dp"

                android:paddingRight="25dp"
                android:paddingLeft="25dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/price_initial_title"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="@string/final_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="10dp"

                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"


                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
<RelativeLayout
    android:paddingTop="5dp"
    android:id="@+id/title_price"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
<androidx.appcompat.widget.AppCompatImageView
    android:layout_centerVertical="true"
    android:id="@+id/dotvert"
    android:layout_width="10dp"
    android:layout_height="10dp"
    android:src="@drawable/dotvert"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:paddingTop="5dp"
        android:layout_centerVertical="true"

        android:layout_marginStart="5dp"
android:layout_toRightOf="@id/dotvert"
        android:paddingRight="5dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="@color/colorPrimary"
        android:text="the final price after seleting car and  accept all policy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />

</RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_below="@id/title_price"
                            android:paddingTop="5dp"
android:layout_marginStart="15dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="#3E6C6E"
                            android:text="@string/main_benifit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
android:id="@+id/price_initial"
                            />





                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>
            <LinearLayout

                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingRight="25dp"
                android:paddingLeft="28dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView

                    android:id="@+id/date_initial_title"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="@string/Expiration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="10dp"
                    android:background="#8FDA9148"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"


                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:paddingTop="5dp"
                            android:id="@+id/title_date"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/dotrouge"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/dotrouge"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:paddingTop="5dp"
                                android:layout_centerVertical="true"

                                android:layout_marginStart="5dp"
                                android:layout_toRightOf="@id/dotrouge"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:textColor="#7C0400"
                                android:text="the exprition date  for your insurance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                />

                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_below="@id/title_date"
                            android:id="@+id/date_assurance"
                            android:paddingTop="5dp"
                            android:layout_marginStart="15dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="#7C0400"
                            android:text="@string/main_benifit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />





                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingRight="25dp"
                android:paddingLeft="25dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/policy_initial_title"
                    android:paddingTop="5dp"
                    android:paddingRight="25dp"
                    android:paddingBottom="5dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="@string/policy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />
                <androidx.cardview.widget.CardView
                    android:layout_centerHorizontal="true"
                    app:cardCornerRadius="10dp"

                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"


                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:paddingTop="5dp"
                            android:id="@+id/title_date2"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/dotrouge2"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/dotvert"/>
                            <androidx.appcompat.widget.AppCompatTextView
                                android:paddingTop="5dp"
                                android:layout_centerVertical="true"

                                android:layout_marginStart="5dp"
                                android:layout_toRightOf="@id/dotrouge2"
                                android:paddingRight="5dp"
                                android:paddingBottom="5dp"
                                android:textStyle="bold"
                                android:textSize="13dp"
                                android:textColor="@color/colorPrimary"
                                android:text="Simlique surant insurance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                />
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_centerVertical="true"
                                android:id="@+id/dotrouge3"
                                android:layout_width="10dp"
                                android:layout_height="10dp"
                                android:src="@drawable/dotvert"/>
                        </RelativeLayout>

                        <androidx.appcompat.widget.AppCompatTextView
                            android:layout_below="@id/title_date2"
                            android:paddingTop="5dp"
                            android:layout_marginStart="15dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="5dp"
                            android:textStyle="bold"
                            android:textSize="18dp"
                            android:textColor="#3E6C6E"
                            android:text="@string/main_benifit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            />
                        <androidx.cardview.widget.CardView
                            android:layout_centerVertical="true"
                            app:cardCornerRadius="10dp"
android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatImageView

        android:layout_centerVertical="true"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/outline_file_download_24"/>

</androidx.cardview.widget.CardView>



                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/layout_button_req"
        android:layout_alignParentBottom="true"
        android:background="@color/whiteColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_panel_request"
            android:paddingTop="15dp"
            android:paddingRight="45dp"
            android:paddingLeft="45dp"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:textColor="@color/whiteTextColor"
            android:text="@string/Save"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/car_ui_base_layout_content_container"
        android:background="#C45A6E6B"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/whiteColor"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/image23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"

                        android:text="Are you sure you want to save this insurance ?"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_alignParentEnd="true"
                        android:id="@+id/request_button"
                        android:background="@drawable/bg_start"
                        android:textColor="@color/whiteTextColor"
                        android:text="Payer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/border_color_dark"
                        android:textColor="@color/colorPrimary"
                        android:text="cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>