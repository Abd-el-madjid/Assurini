<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/transparent"
    android:id="@+id/carCard"

    >

    <androidx.cardview.widget.CardView

        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/whiteColor"
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout

            android:id="@+id/question_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/car_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/imageView"
                android:layout_toLeftOf="@id/imageViewuninsured"

                android:paddingBottom="10dp"
                android:paddingTop="10dp"
                android:textAlignment="textStart"
                android:text="CAR"
                android:textColor="@color/blackTextColor"
                android:textSize="18dp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/car_model"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/car_type"
                android:layout_toRightOf="@id/imageView"
                android:layout_toLeftOf="@id/imageViewuninsured"

                android:text="Insurance"
                android:textColor="@color/blackTextColor"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentLeft="true"
                android:padding="16sp"
                android:src="@drawable/sport_car" />
            <ImageView
                android:id="@+id/imageViewuninsured"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:padding="16sp"
                android:src="@drawable/silhouette_12757416" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>