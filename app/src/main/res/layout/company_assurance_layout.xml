<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/transparent"
    android:id="@+id/linear_layout"


    >

    <androidx.cardview.widget.CardView

        app:cardCornerRadius="15dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="@color/whiteColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
        <LinearLayout
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"

            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/whiteColor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_company"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/company1"
                    />

            </androidx.cardview.widget.CardView>

            <LinearLayout

                android:orientation="vertical"
                android:layout_width="150dp"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatImageView

                    android:layout_width="120dp"
                    android:layout_height="38dp"
                    android:layout_marginStart="10dp"
                    android:padding="5dp"
                    android:src="@drawable/stars" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:textColor="@color/colorPrimaryLight"
                    android:id="@+id/company_name"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="multi star Person Health"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="5dp"
                    android:textColor="@color/colorPrimaryLight"

                    android:layout_marginStart="10dp"
                    android:id="@+id/company_anssurance_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="14dp"
                    android:text="coverage"

                    />

            </LinearLayout>
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="15dp"
                app:cardUseCompatPadding="true"
                app:cardBackgroundColor="@color/whiteColor"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:padding="5dp"

                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/evaluation"
                    android:text="25"
                    android:textSize="40dp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/lightMain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginTop="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="GB/MO"
                    android:textAlignment="center"
                    android:textColor="@color/lightMain"
                    android:textSize="14dp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

           <androidx.cardview.widget.CardView
               android:layout_marginStart="10dp"
               android:layout_marginEnd="10dp"
               android:layout_marginBottom="10dp"
               app:cardCornerRadius="17dp"
               android:paddingTop="10dp"
               android:paddingRight="10dp"
               android:paddingLeft="10dp"
               app:cardBackgroundColor="@color/colorPrimaryLight"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
               >
               <LinearLayout
                   android:orientation="horizontal"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <androidx.appcompat.widget.AppCompatTextView
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:paddingLeft="15dp"
                       android:paddingRight="15dp"
                       android:textColor="@color/whiteTextColor"
                       android:text="Quick"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/company_phone"
                       android:layout_width="135dp"
                       android:layout_height="match_parent"
                       android:paddingLeft="15dp"
                       android:paddingTop="10dp"
                       android:paddingRight="15dp"
                       android:paddingBottom="10dp"
                       android:text="0838382345"
                       android:textColor="@color/whiteTextColor"
                       android:textSize="16dp"
                       android:textStyle="bold" />

                   <androidx.appcompat.widget.AppCompatTextView
                       android:id="@+id/company_address"
                       android:paddingTop="10dp"
                       android:paddingBottom="10dp"
                       android:paddingLeft="5dp"
                       android:paddingRight="15dp"
                       android:textColor="@color/whiteTextColor"
                       android:text="+2000 partner"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       />

               </LinearLayout>
           </androidx.cardview.widget.CardView>



</LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>