<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Assurance.CompanyDetailActivity"
    android:background="@drawable/gradient_background"

    >

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:background="@color/transparent"
        >

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/transparent"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="10dp"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:id="@+id/linear_layout_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >



                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="45dp"
                        android:layout_height="35dp"

                        android:layout_centerInParent="true"

                        android:src="@drawable/arrow" />



                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/discutionname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="10dp"
                    android:text="@string/Plan_Detailles"
                    android:textColor="@color/primaryTextColor"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgreay" />
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>
<RelativeLayout
    android:id="@+id/detail_text"
    android:layout_below="@+id/bar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
android:layout_centerHorizontal="true"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@color/whiteColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingRight="15dp"
        android:paddingLeft="15dp">

            <LinearLayout
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:paddingBottom="10dp"

                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"
                    android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:padding="10dp"
                        android:id="@+id/image_company"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/company1"
                        />

                </androidx.cardview.widget.CardView>

                <LinearLayout

                    android:orientation="vertical"
                    android:layout_width="165dp"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView

                        android:layout_width="120dp"
                        android:layout_height="38dp"
                        android:layout_marginStart="10dp"
                        android:padding="5dp"
                        android:src="@drawable/stars" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textColor="@color/colorPrimaryLight"
                        android:id="@+id/company_name"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="multi star Person Health"

                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="5dp"
                        android:textColor="@color/colorPrimaryLight"

                        android:layout_marginStart="10dp"
                        android:id="@+id/company_anssurance_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="14dp"
                        android:text="coverage"

                        />

                </LinearLayout>
                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="15dp"
                    app:cardUseCompatPadding="true"
                    app:cardBackgroundColor="@color/whiteColor"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:padding="5dp"

                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/evaluation"
                        android:text="25"
                        android:textSize="40dp"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="@color/lightMain"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_marginTop="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="GB/MO"
                        android:textAlignment="center"
                        android:textColor="@color/lightMain"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>





        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

    <ScrollView
        android:layout_above="@id/layout_button_req"
        android:id="@+id/scroll_detaille"
        android:layout_below="@id/detail_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
       <RelativeLayout
           android:paddingTop="5dp"
           android:paddingRight="10dp"
           android:paddingLeft="10dp"

           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <androidx.appcompat.widget.AppCompatTextView
               android:id="@+id/price_initial"
               android:paddingTop="15dp"
               android:paddingRight="25dp"
               android:paddingBottom="15dp"
               android:textStyle="bold"
               android:textSize="24dp"
               android:textColor="@color/colorPrimaryLight"
               android:text="@string/main_benifit"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"

               />

       </RelativeLayout>
            <LinearLayout
                android:orientation="vertical"

                android:paddingRight="10dp"
                android:paddingLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:paddingRight="25dp"
                    android:textStyle="bold"
                    android:textSize="32dp"
                    android:textColor="@color/colorPrimary"
                    android:text="@string/PLUS_HEALTH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:paddingRight="25dp"
                    android:paddingBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="24dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="@string/comprehension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/group_14"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingRight="25dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/main_benifit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/group_14"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingRight="25dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/main_benifit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/group_14"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingRight="25dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/main_benifit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

                <LinearLayout
                    android:paddingBottom="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:src="@drawable/group_14"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:paddingRight="25dp"
                        android:textStyle="bold"
                        android:layout_marginStart="5dp"
                        android:textSize="16dp"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/main_benifit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"

                android:paddingRight="10dp"
                android:paddingLeft="10dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.appcompat.widget.AppCompatTextView
                    android:paddingRight="25dp"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:textColor="@color/colorPrimaryLight"
                    android:text="As an individual navigating life\'s journey, you understand the importance of safeguarding what matters most. You\'re well aware that your financial well-being is crucial, especially when it comes to unexpected events on the road. That\'s why we offer you a dedicated mobile car insurance app to help you protect your most valuable asset: your vehicle. With our intuitive and secure app, you can easily access your insurance information, manage your policies, and even take preventive measures to ensure the safety and longevity of your vehicle. Because with us, your car's protection is our priority."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    />


            </LinearLayout>


        </LinearLayout>
    </ScrollView>
<RelativeLayout
    android:id="@+id/layout_button_req"
    android:layout_alignParentBottom="true"
    android:background="@color/whiteColor"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/show_panel_request"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:paddingBottom="15dp"
            android:textStyle="bold"
android:textSize="18dp"
            android:textColor="@color/whiteTextColor"
            android:text="@string/Request_Insurance_Plan"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bg_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/car_ui_base_layout_content_container"
        android:background="#C45A6E6B"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:layout_centerInParent="true">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginStart="60dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/whiteColor"
            app:cardCornerRadius="15dp">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/image23"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>
                <RelativeLayout
                    android:paddingRight="10dp"
                    android:paddingLeft="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:textAlignment="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:textSize="22dp"
                        android:textStyle="bold"
                        android:textColor="@color/colorPrimary"

                        android:text="Are you sure you want to request this insurance ?"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

                <RelativeLayout
                    android:paddingTop="20dp"
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_alignParentEnd="true"
                        android:id="@+id/request_button"
                        android:background="@drawable/bg_start"
                        android:textColor="@color/whiteTextColor"
                        android:text="Request"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/cancel_button"
                        android:layout_alignParentStart="true"
                        android:background="@drawable/border_color_dark"
                        android:textColor="@color/colorPrimary"
                        android:text="cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>