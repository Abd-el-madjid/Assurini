<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Dashboard"
    android:background="@drawable/gradient_background"
    >
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomNavigation"/>

    <com.etebarian.meowbottomnavigation.MeowBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:mbn_backgroundBottomColor="#ffffff"
        app:mbn_countBackgroundColor="@color/secondaryLight"
        app:mbn_countTextColor="#ffffff"
        app:mbn_defaultIconColor="@color/colorPrimary"
        app:mbn_rippleColor="@color/secondaryLight"
        app:mbn_selectedIconColor="@color/lightMain"
        app:mbn_shadowColor="@color/secondaryLight"
        android:layout_alignParentBottom="true"

        />

</RelativeLayout>